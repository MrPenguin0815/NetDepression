<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/topic_frame"
    android:padding="15dp"
    android:layout_margin="15dp"
    android:orientation="horizontal"
    android:id="@+id/topic1">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/imgs"
        android:layout_marginRight="20dp">


        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/topic"/>

        <TextView
            android:id="@+id/topic_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/topic_title1"
            android:textSize="20sp"/>


        <TextView
            android:textColor="@color/white"
            android:padding="5dp"
            android:id="@+id/topic_text"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:text="@string/topic_text1"
            android:background="@drawable/times_frame"/>


    </LinearLayout>


    <FrameLayout
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_gravity="end"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:id="@+id/imgs"
        android:layout_centerVertical="true">


        <androidx.cardview.widget.CardView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginLeft="5dp"
            app:cardElevation="12dp"
            android:layout_marginTop="5dp">

            <ImageView
                android:scaleType="centerCrop"
                android:id="@+id/img1"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView

            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginLeft="45dp"
            app:cardElevation="7dp"
            android:layout_marginTop="45dp">

            <ImageView
                android:scaleType="centerCrop"
                android:id="@+id/img2"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="85dp"
            app:cardElevation="3dp"
            android:layout_marginTop="85dp">

            <ImageView
                android:scaleType="centerCrop"
                android:id="@+id/img3"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </androidx.cardview.widget.CardView>



    </FrameLayout>


</RelativeLayout>