<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/card_frame"
    android:layout_marginTop="15dp">

    <LinearLayout
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_marginLeft="15dp"
            android:layout_weight="6"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/exclusive_occasion_list"
            android:textSize="20sp"
            android:textColor="#2B2C2C"
            android:layout_marginStart="15dp" />


        <TextView
            android:layout_marginRight="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="@string/more"
            android:textSize="12sp"
            android:textColor="@color/can_click"
            android:background="@drawable/login_frame"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="20sp" />



    </LinearLayout>



    <androidx.recyclerview.widget.RecyclerView
        android:layout_margin="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/card_recycler2"/>

</LinearLayout>